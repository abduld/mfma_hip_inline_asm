HIP_PATH?= $(wildcard /opt/rocm/hip)
ifeq (,$(HIP_PATH))
	HIP_PATH=../../..
endif

HIPCC=$(HIP_PATH)/bin/hipcc

TARGET=hcc 

SOURCES = sgemm_mfma_small_test.cpp
OBJECTS = $(SOURCES:.cpp=.o)

EXECUTABLE=./sgemm_mfma_small_test

.PHONY: test


all: $(EXECUTABLE) test

CXXFLAGS =-g --cuda-gpu-arch=gfx908
CXX=$(HIPCC)


$(EXECUTABLE): $(OBJECTS)
	$(HIPCC) $(OBJECTS) -o $@


test: $(EXECUTABLE)
	$(EXECUTABLE)


clean:
	rm -f $(EXECUTABLE)
	rm -f $(OBJECTS)
	rm -f $(HIP_PATH)/src/*.o

